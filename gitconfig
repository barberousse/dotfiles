[core]
	editor = nvim
[push]
	default = simple
[user]
	email = bbarberousse@emmisolutions.com
	name = Beno√Æt Barberousse
[filter "lfs"]
	smudge = git-lfs smudge %f
	required = true
	clean = git-lfs clean %f
[status]
  showUntrackedFiles = all
[stash]
  showPatch = true
[alias]
 	a   = add --patch
	b   = branch
	c   = commit
	ch  = checkout
	d   = diff
	fnd = grep --line-number --break --heading
	l   = log --oneline --decorate
	la  = log --oneline --decorate --all
	m   = merge
	p   = push
	r   = remote -v
	st  = status --branch --short
	sv  = stash save -u
	svs = stash list
  opn = stash apply
